{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/users": {
    "description": "serves an array of user objects",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "username": "user",
          "name": "james",
          "avatar_url": "<url>"
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object containing the article body and the associated properties ",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 4,
          "body": "Text from the article..",
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "<url>"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array containing all comments for the provided article_id ",
    "queries": [],
    "exampleResponse": {
      "comment": [
        {
          "comment_id": 8,
          "body": "Delicious crackerbreads",
          "article_id": 1,
          "author": "ginny",
          "votes": 0,
          "created_at": "2020-04-14T20:19:00.000Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment to provided ariticle_id. Returns object with added date and comment_id ",
    "queries": [],
    "exampleResponse": {
      "comment": [
        {
          "comment_id": 19,
          "body": "Wonderful, simply wonderful",
          "article_id": 2,
          "author": "rogersop",
          "votes": 0,
          "created_at": "2023-10-04T18:08:14.432Z"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "increments or decrements the votes on an article ",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "article_id": 6,
          "title": "A",
          "topic": "mitch",
          "author": "icellusedkars",
          "body": "Delicious tin of cat food",
          "created_at": "2020-10-18T01:00:00.000Z",
          "votes": 20,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment",
    "queries": [],
    "exampleResponse": {
    }
  }
}
